<div class="wrapper">
  <div class="side">
    <div class="side-content">
      <h1 id="title">
        {{ title }}
      </h1>
    </div>
    <div class="footer">
      <img class="logo" src="logo.png">
      <h4 class="brand-name">
        kylies.photos
      </h4>
    </div>
  </div>
  <div class="main">
    <div class="extended-background"></div>
    {{#previewImgUrl}}
    <img class="main-image" src="{{previewImgUrl}}" />
    {{/previewImgUrl}}
    {{^previewImgUrl}}
    <img class="main-image" src="preview.jpg" />
    {{/previewImgUrl}}
  </div>
</div>

<script src="textFit.js"></script>
<script>
  window.onload = function () {
    textFit(document.getElementById('title'), { maxFontSize: 500, multiLine: true });
  };
</script>